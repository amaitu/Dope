<header class="post-header">
    {{#if single}}
        <h1 class="post-title">{{title}}</h1>
        {{> post-meta}}
    {{else}}
        {{> post-meta}}
        <{{tag}} class="post-title">
            <a class="post-title-link" href="{{url}}">{{title}}</a>
        </{{tag}}>
    {{/if}}
</header>
